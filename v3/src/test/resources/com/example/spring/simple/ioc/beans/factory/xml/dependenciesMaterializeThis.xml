<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
  - Replicates a failure because of the dependence of prototype and singleton on
  the dao. Involves factory beans.
  -->

<beans>

<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		
	</bean>


	<!-- Transaction manager that delegates to JTA (for a transactional JNDI DataSource) -->
	<bean id="transactionManager" class="com.example.spring.simple.ioc.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource"><ref local="dataSource"/></property>
	</bean>
		
    <bean id="dao" class="com.example.spring.simple.ioc.beans.factory.xml.DummyDao"
    				autowire="constructor">
    </bean>

	
	
	<bean id="boPrototype" 
		autowire="constructor" class="com.example.spring.simple.ioc.beans.factory.xml.DummyBoImpl"
		singleton="false"
	/>
	
	<bean id="prototypeTargetSource" 
		class="com.example.spring.simple.ioc.aop.target.PrototypeTargetSource">
		<property name="targetBeanName"><value>boPrototype</value></property>
	</bean>
	
	
	<bean id="prototypeBenchmark" class="com.example.spring.simple.ioc.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager"><ref local="transactionManager"/></property>
		<property name="target"><ref local="prototypeTargetSource"/></property>
		<property name="proxyInterfaces"><value>com.example.spring.simple.ioc.beans.factory.xml.DummyBo</value></property>
		<property name="transactionAttributes">
			<props>
				<prop key="placeOrder">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	

	<bean id="boSingleton" autowire="constructor" class="com.example.spring.simple.ioc.beans.factory.xml.DummyBoImpl">
	</bean>
	
	

</beans>
