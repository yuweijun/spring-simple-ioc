<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	Tests for independent prototype behaviour.
-->

<beans>

	<!-- Simple target -->
	<bean id="target" class="com.example.spring.simple.ioc.aop.framework.adapter.ThrowsAdviceInterceptorTests$Echo">
	</bean>
	
	<bean id="nopInterceptor" class="com.example.spring.simple.ioc.aop.interceptor.NopInterceptor">
	</bean>
	
	<bean id="countingBeforeAdvice"
		class="com.example.spring.simple.ioc.aop.framework.CountingBeforeAdvice"
	/>
	
	<bean id="throwsAdvice" class="com.example.spring.simple.ioc.aop.framework.adapter.ThrowsAdviceInterceptorTests$MyThrowsHandler">
	</bean>
	

	<bean id="throwsAdvised"
		class="com.example.spring.simple.ioc.aop.framework.ProxyFactoryBean">
		<property name="interceptorNames"><value>countingBeforeAdvice,nopInterceptor,throwsAdvice,target</value></property>
	</bean>
	
</beans>		
	
	