<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="init-method1" 
		class="com.example.spring.simple.ioc.beans.factory.xml.XmlBeanFactoryTest$DoubleInitializer"
		init-method="init"
	>
		<property name="num"><value>7</value></property>
	</bean>
	
	<bean id="init-method2" 
		class="com.example.spring.simple.ioc.beans.factory.xml.XmlBeanFactoryTest$BadInitializer"
		init-method="init2"
		singleton="false"
	/>

	<bean id="init-method3" 
		class="com.example.spring.simple.ioc.beans.TestBean"
		init-method="init"
		singleton="false"
	/>

	<bean id="init-and-ib" 
		class="com.example.spring.simple.ioc.beans.factory.xml.XmlBeanFactoryTest$InitAndIB"
		lazy-init="true" 
		init-method="customInit"
		destroy-method="customDestroy"
	/>

	<bean id="dependingBean" class="com.example.spring.simple.ioc.beans.factory.xml.XmlBeanFactoryTest$DependingBean"
		depends-on="preparingBean1, preparingBean2"
	/>

	<bean id="preparingBean1" class="com.example.spring.simple.ioc.beans.factory.xml.XmlBeanFactoryTest$PreparingBean1"/>

	<bean id="preparingBean2" class="com.example.spring.simple.ioc.beans.factory.xml.XmlBeanFactoryTest$PreparingBean2"/>

</beans>
